[global]
<% if not node['pypi']['index'].eql?("") %>
index = <%= node['pypi']['index'] %>
<% end -%>

<% if not node['pypi']['index-url'].eql?("") %>
index-url = <%= node['pypi']['index-url'] %>
<% end -%>

<% if not node['pypi']['extra-index-url'].eql?("") %>
extra-index-url = <% node['pypi']['extra-index-url'].split(',').each do |idx| %>
   <%= idx %><% end -%>
<% end -%>

<% if not node['pypi']['trusted-host'].eql?("") %>
trusted-host = <%= node['pypi']['trusted-host'] %>
<% end -%>

<% if not node['pypi']['proxy'].eql?("") %>
proxy = <%= node['pypi']['proxy'] %>
<% end -%>
